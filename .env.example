# YouTube Summary MCP Server Configuration

# API Configuration
# YOUTUBE_API_KEY=your_api_key_here

# Summary Configuration
# Summary length: short, medium, or long
SUMMARY_LENGTH=medium

# Summary ratio (0.0 to 1.0) - 0.3 means 30% of original text
SUMMARY_RATIO=0.3

# Language Configuration
# Default language for transcripts
DEFAULT_LANGUAGE=en

# Comma-separated list of supported languages
SUPPORTED_LANGUAGES=en,ko,es,fr,de,ja,zh

# Rate Limiting Configuration
# Enable/disable rate limiting
RATE_LIMIT_ENABLED=true

# Number of requests allowed per rate limit window
RATE_LIMIT_REQUESTS=100

# Rate limit window in seconds (3600 = 1 hour)
RATE_LIMIT_WINDOW_SECONDS=3600

# Caching Configuration
# Enable/disable transcript caching
CACHE_ENABLED=true

# Cache time-to-live in seconds (86400 = 24 hours)
CACHE_TTL_SECONDS=86400

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Server Configuration
SERVER_NAME=YouTube Summary MCP
SERVER_VERSION=0.1.0
